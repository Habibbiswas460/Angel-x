# Git Attributes for proper handling of files
# Ensures consistent line endings across platforms

* text=auto

# Python
*.py text eol=lf
*.pyc binary
*.pyo binary
*.pyd binary
__pycache__ export-ignore

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
.env text eol=lf
.editorconfig text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.zip binary
*.tar binary
*.gz binary
*.db binary
*.sqlite binary
