# Angel-X Docker Environment Configuration
# Copy this file to .env and update with your actual values

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# ==============================================================================
# ANGELONE API CREDENTIALS
# ==============================================================================
ANGELONE_CLIENT_CODE=your_client_code
ANGELONE_API_KEY=your_api_key
ANGELONE_PASSWORD=your_password
ANGELONE_TOTP_SECRET=your_totp_secret
ANGELONE_FEED_TOKEN=

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
DATABASE_NAME=angel_x
DATABASE_USER=angelx
DATABASE_PASSWORD=change_this_secure_password
DATABASE_PORT=5432

# ==============================================================================
# REDIS CACHE
# ==============================================================================
REDIS_PASSWORD=change_this_secure_password
REDIS_PORT=6379
CACHE_ENABLED=True

# ==============================================================================
# TRADING CONFIGURATION
# ==============================================================================
TRADING_ENABLED=False
PAPER_TRADING=True

# ==============================================================================
# APPLICATION PORTS
# ==============================================================================
DASHBOARD_PORT=5001
API_PORT=5000

# ==============================================================================
# MONITORING (Optional - Telegram Alerts)
# ==============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==============================================================================
# MONITORING STACK (Optional)
# ==============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ==============================================================================
# NOTES
# ==============================================================================
# 1. Change all passwords before production deployment
# 2. Set TRADING_ENABLED=True only when ready for live trading
# 3. Use strong passwords for DATABASE_PASSWORD and REDIS_PASSWORD
# 4. Keep PAPER_TRADING=True for testing
# 5. Configure Telegram for trade alerts (optional)
